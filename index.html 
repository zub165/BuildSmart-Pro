    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            // Property selection
            $('.property-card').click(function() {
                $('.property-card').removeClass('active');
                $(this).addClass('active');
                // Load appropriate data for selected property size
                const size = $(this).data('size');
                loadProjectData(size);
            });
            
            // Unit conversion toggle
            $('input[name="units"]').change(function() {
                const isMetric = $(this).val() === 'metric';
                convertUnits(isMetric);
            });
            
            // Editable fields
            $(document).on('click', '.editable-field', function() {
                const currentValue = $(this).text();
                const fieldName = $(this).data('field');
                const input = $('<input>', {
                    type: 'text',
                    val: currentValue,
                    class: 'edit-input form-control form-control-sm',
                    'data-field': fieldName
                });
                
                $(this).html(input);
                input.focus();
            });
            
            $(document).on('blur', '.edit-input', function() {
                const newValue = $(this).val();
                const fieldName = $(this).data('field');
                const parentTd = $(this).closest('td');
                
                parentTd.html(`<span class="editable-field" data-field="${fieldName}">${newValue}</span>`);
                
                // Recalculate totals
                recalculateRow(parentTd.closest('tr'));
                recalculateSectionTotals();
            });
            
            // Task completion
            $('.form-check-input').change(function() {
                const label = $(this).siblings('.form-check-label');
                if($(this).is(':checked')) {
                    label.addClass('task-completed');
                } else {
                    label.removeClass('task-completed');
                }
                updateProgress();
            });
            
            // Initialize functions
            function loadProjectData(size) {
                // In a real app, this would load data from an API
                console.log(`Loading data for ${size} Marla/Kanal property`);
            }
            
            function convertUnits(isMetric) {
                // In a real app, this would convert all displayed units
                console.log(`Converting to ${isMetric ? 'metric' : 'imperial'} units`);
            }
            
            function recalculateRow(row) {
                const quantity = parseFloat(row.find('[data-field="quantity"]').text()) || 
                                parseFloat(row.find('[data-field="days"]').text()) || 0;
                const unitPrice = parseFloat(row.find('[data-field="unitPrice"]').text()) || 
                                  parseFloat(row.find('[data-field="rate"]').text()) || 0;
                const total = quantity * unitPrice;
                
                row.find('td:eq(3)').text('$' + total.toFixed(2));
            }
            
            function recalculateSectionTotals() {
                // This would calculate subtotals for materials and labor
                console.log('Recalculating section totals');
            }
            
            function updateProgress() {
                // Update progress bars based on completed tasks
                console.log('Updating progress tracking');
            }
        });
    </script>
</body>
